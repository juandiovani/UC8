public class Pessoa {

    // Atributos (caracteristicas do objeto)
     String nome; // nome da pessoa no
    int idade; // idade da pessoa

    // Constructor: define como o objeto será criado
    public Pessoa(String nome, int idade ){
        this.nome = nome;
        this.idade = idade;
    }

    // Metodo: define o comportamento do objeto
    public void apresentar () {
        // Exibe a mensagem no console
        // sout
        System.out.println("Olá, meu nome é" + nome + "e tenho" + idade + "anos.");
        // Metodo principal: ponto de partida do programa
        // psvm
    }
        public static void main (String[] argm) {
            // Cria uma instancia (objeto) da classe
            Pessoa pessoa1 = new Pessoa( "Juan",  25);
            Pessoa pessoa2 = new Pessoa("Anakin", 28);
            Pessoa pessoa3 = new Pessoa("Obi-wan", 35);
            Pessoa pessoa4 = new Pessoa("Luke", 25);
            // Chama o método "apresentar"
            pessoa1.apresentar();
            pessoa2.apresentar();
            pessoa3.apresentar();
            pessoa4.apresentar();
        }
}

